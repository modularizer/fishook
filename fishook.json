{
  "_about": "run `fishook list` to see all options",
  "pre-commit": [{
      "onFileEvent": "forbid_pattern 'turtles' 'we dont talk about turtles'",
      "skipList": ["*fishook*"]
    }, {
      "onFileEvent": "ensure_executable",
      "applyTo": "*.sh"
    }, {
      "onFileEvent": "$FISHOOK_REPO_ROOT/scripts/sync-version.sh",
      "applyTo": ["package.json"]
    }, {
      "onFileEvent": "sedder 's/apples/oranges/g' --index-only",
      "applyTo": ["README.md"]
    }, {}
  ],
  "post-checkout": "echo Nice! You checked out \"$(git branch --show-current)\" \"($(git rev-parse --short HEAD))\""
}